{
  "name": "library-management",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "concurrently \"vite\" \"json-server --watch src/json-server/db.json\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .tsx",
    "lint:fix": "eslint --ext .tsx --ext .ts --fix .",
    "format": "prettier --write \"**/*.+(ts|tsx|json|css)\"",
    "prepare": "cd ../.. && husky install pre-commit/.husky",
    "commitmsg": "commitlint -E HUSKY_GIT_PARAMS",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "pnpm run commitmsg"
    }
  },
  "dependencies": {
    "axios": "^1.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "react-router-dom": "^6.9.0",
    "swr": "^2.1.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@storybook/addon-essentials": "^7.0.9",
    "@storybook/addon-interactions": "^7.0.9",
    "@storybook/addon-links": "^7.0.9",
    "@storybook/blocks": "^7.0.9",
    "@storybook/builder-vite": "^7.0.20",
    "@storybook/react": "^7.0.9",
    "@storybook/react-vite": "^7.0.9",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@types/prop-types": "^15.7.5",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/testing-library__jest-dom": "^5.14.7",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vitejs/plugin-react": "^3.1.0",
    "babel-loader": "^8.3.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-storybook": "^0.6.11",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-transform-stub": "^2.0.0",
    "json-server": "^0.17.2",
    "prettier": "^2.8.5",
    "storybook": "^7.0.9",
    "storybook-addon-react-router-v6": "^1.0.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.2",
    "vite": "^4.2.0",
    "vite-plugin-environment": "^1.1.3",
    "vite-tsconfig-paths": "^4.2.0"
  }
}
